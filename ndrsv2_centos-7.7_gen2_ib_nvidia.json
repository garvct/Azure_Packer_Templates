{
    "variables": {
        "subscription_id": "<NOT-SET>",
        "location": "<NOT-SET>",
        "resource_group": "<NOT-SET>",
        "tenant_id": "<NOT-SET>",
        "client_id": "<NOT-SET>",
        "client_secret": "<NOT-SET>",
        "image_name": "<NOT-SET>",
        "image_publisher": "OpenLogic",
        "image_offer": "CentOS",
        "image_sku": "7_7-gen2",
        "vm_size": "Standard_ND40rs_v2",
        "storage_account_type": "Premium_LRS",
        "appinstaller": "",
        "install": "</full/path/to/mofed_install.sh>",
        "install_utils": "</full/path/to/install_utils.sh>",
        "install_mellanoxofed": "</full/path/to/install_mellanoxofed.sh>",
        "hpc-tuning": "</full/path/to/hpc-tuning.sh>",
        "update_kernel": "</full/path/to/update_kernel.sh>",
        "install_lis": "</full/path/to/install_lis.sh>",
        "cuda_drivers": "</full/path/to/cuda_drivers.sh>"
    },
    "builders": [
        {
            "type": "azure-arm",
            "async_resourcegroup_delete": "true",
            "subscription_id": "{{user `subscription_id`}}",
            "tenant_id": "{{user `tenant_id`}}",
            "client_id": "{{user `client_id`}}",
            "client_secret": "{{user `client_secret`}}",
  
			"image_publisher": "{{user `image_publisher`}}",
			"image_offer": "{{user `image_offer`}}",
			"image_sku": "{{user `image_sku`}}",

            "managed_image_resource_group_name": "{{user `resource_group`}}",
            "managed_image_name": "{{user `image_name`}}",
            "managed_image_storage_account_type": "{{user `storage_account_type`}}",
            
            "os_type": "Linux",
            "vm_size":  "{{user `vm_size`}}",
            "ssh_pty": "true",
  
            "location": "{{user `location`}}"
        }
    ],
    "provisioners": [
        {
            "type": "file",
            "source": "{{user `install`}}",
            "destination": "/tmp/install.sh"
        },
        {
            "type": "file",
            "source": "{{user `install_utils`}}",
            "destination": "/tmp/install_utils.sh"
        },
        {
            "type": "file",
            "source": "{{user `install_mellanoxofed`}}",
            "destination": "/tmp/install_mellanoxofed.sh"
        },
        {
            "type": "file",
            "source": "{{user `hpc-tuning`}}",
            "destination": "/tmp/hpc-tuning.sh"
        },
        {
            "type": "file",
            "source": "{{user `update_kernel`}}",
            "destination": "/tmp/update_kernel.sh"
        },
        {
            "type": "file",
            "source": "{{user `install_lis`}}",
            "destination": "/tmp/install_lis.sh"
        },
        {
            "type": "file",
            "source": "{{user `cuda_drivers`}}",
            "destination": "/tmp/cuda_drivers.sh"
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "chmod +x /tmp/update_kernel.sh",
                "/tmp/update_kernel.sh",
                "echo 'rebooting now...'",
                "sync && reboot"
            ],
            "inline_shebang": "/bin/bash -e",
            "type": "shell",
            "skip_clean": true,
            "expect_disconnect": true
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "chmod +x /tmp/install.sh",
                "/tmp/install.sh"
            ],
            "inline_shebang": "/bin/bash -e",
            "type": "shell",
            "skip_clean": true
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "chmod +x /tmp/install_lis.sh",
                "/tmp/install_lis.sh",
                "echo 'rebooting now...'",
                "sync && reboot"
            ],
            "inline_shebang": "/bin/bash -e",
            "type": "shell",
            "skip_clean": true,
            "expect_disconnect": true
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "chmod +x /tmp/cuda_drivers.sh",
                "/tmp/cuda_drivers.sh",
                "echo 'rebooting now...'",
                "sync && reboot"
            ],
            "inline_shebang": "/bin/bash -e",
            "type": "shell",
            "skip_clean": true,
            "expect_disconnect": true
        },
        {
            "execute_command": "chmod +x {{ .Path }}; {{ .Vars }} sudo -E sh '{{ .Path }}'",
            "inline": [
                "echo 'cleaning up after reboot'",
                "/usr/sbin/waagent -force -deprovision+user && export HISTSIZE=0 && sync"
            ],
            "inline_shebang": "/bin/bash -e",
            "type": "shell",
            "skip_clean": true,
            "pause_before": "10s"
        }
    ]
}
  
